nav.navbar.navbar-fixed-top.navbar-default
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/account")
        span #{App.getSiteName()}
    .collapse.navbar-collapse#navbar
      ul.nav.navbar-nav
        li: a(href="/account/posts") Posts
        li: a(href="/account/files") Files
        li: a(href="/account/profile") Profile
        li: a(href="/") Site Home
        
      ul.nav.navbar-nav.navbar-right.navbar-user
        li
          a(href="javascript:$('#form-logout').submit();")
            = userService.currentUser().getNickname()
            |, logout
        
          form#form-logout(style="visibility: hidden", method="post", action="/logout")
            input(type="hidden", name='_csrf', value='#{_csrf.token}')
    
