extends ../layout/account


block content
  h1 Edit stored file information
  hr


  form.post-form(method="post",action="/account/files/#{file.getId()}")
    .item-row
      input(type="hidden", name='_csrf', value='#{_csrf.token}')
    .item-row
      input(type="hidden", name="path", value='#{fileForm.getPath()}')
    .item-row
      input(type="hidden", name="size", value="#{fileForm.getSize()}")

    .item-row
      | Title
      input.form-control(type="text", name="title", value='#{fileForm.getTitle()}')
    .item-row
      | Name
      input.form-control(type="text", name="name", value='#{fileForm.getName()}')
    .item-row
      | Path
      input.form-control(type="text", value='#{fileForm.getPath()}', disabled="true")
    .item-row
      | Size
      input.form-control(type="text", value="#{fileForm.getSize()}", disabled="true")

    .item-row
      hr
      button.btn.btn-primary.btn-block(type="submit") Save
